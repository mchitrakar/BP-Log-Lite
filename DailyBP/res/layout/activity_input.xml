<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fillcolor_input"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dailybp.InputActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="@dimen/Input_datetime_Wt"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/Input_datetime_marginL"
        android:layout_marginTop="@dimen/Input_datetime_marginT"
        android:text="@string/lbl_datetime"
        android:textSize="@dimen/input_date_ht" />

        <EditText
            android:id="@+id/edit_about"
            android:layout_width="@dimen/Input_Txt_Wt"
            android:layout_height="@dimen/Input_Txt_Ht"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="@dimen/Input_systolic_marginT"
            android:background="@drawable/fillcolor_edit"
            android:ems="10"
            android:inputType="number" />
        
        <EditText
	        android:id="@+id/editText2"
	        android:layout_width="@dimen/Input_Txt_Wt"
	        android:layout_height="@dimen/Input_Txt_Ht"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_below="@+id/edit_about"
	        android:layout_marginTop="@dimen/Input_diastolic_marginT"
	        android:background="@drawable/fillcolor_edit"
	        android:ems="10"
	        android:inputType="number" />
        
         <EditText
	        android:id="@+id/editText3"
            android:layout_width="@dimen/Input_Txt_Wt"
	        android:layout_height="@dimen/Input_Txt_Ht"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_below="@+id/editText2"
	        android:layout_marginTop="@dimen/Input_heartbeat_marginT"
	        android:background="@drawable/fillcolor_edit"
	        android:ems="10"
	        android:inputType="number" />

         <Button
             android:id="@+id/button3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="false"
	         android:layout_alignParentTop="true"
	         android:layout_marginLeft="@dimen/Input_btncancel_marginL"
	         android:layout_marginTop="@dimen/Input_btncancel_marginT"
             android:background="@drawable/buttonhighlight_input_clear"
             android:onClick="onClear"
             android:textColor="@color/custom_red"
             android:textSize="@dimen/Cancel_Btn_Text" />

         <Button
             android:id="@+id/button1"
             android:layout_width="@dimen/Input_btnadd_Wt"
             android:layout_height="@dimen/Input_btnadd_Ht"
             android:layout_alignParentTop="True"
             android:layout_marginLeft="@dimen/Input_btnadd_marginL"
             android:layout_marginTop="@dimen/Input_btnadd_marginT"
             android:layout_toRightOf="@+id/button3"
             android:background="@drawable/buttonhighlight_input_add"
             android:minHeight="@dimen/Btn_Ht"
             android:onClick="onAdd"
             android:textColor="@color/custom_red"
             android:textColorHint="@color/custom_red" />

         <Button
             android:id="@+id/button2"
             android:layout_width="@dimen/Input_btnsave_Wt"
             android:layout_height="@dimen/Input_btnsave_Ht"
             android:layout_alignLeft="@+id/editText3"
             android:layout_alignTop="@+id/editText3"
             android:layout_marginLeft="@dimen/Input_btnsave_marginL"
             android:layout_marginTop="@dimen/Input_btnsave_marginT"
             android:background="@drawable/buttonhighlight_input_save"
             android:minHeight="@dimen/Btn_Ht"
             android:onClick="onSave"
             android:textColor="@color/custom_red" />

</RelativeLayout>